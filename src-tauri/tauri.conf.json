{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ghostwriter",
  "version": "0.2.9",
  "identifier": "com.nearfuturelaboratory.ghostwriter.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5111",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ghostwriter",
        "label": "main",
        "width": 800,
        "height": 1000,
        "minWidth": 720,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": [
            "mica"
          ]
        }
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' https: http: data: ws: wss: blob: file: customprotocol: asset:",
        "img-src": "'self' asset: data: blob: http: https: http://asset.localhost",
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com",
        "connect-src": "'self' ipc: http://ipc.localhost http: https: ws: wss:",
        "font-src": "'self' https://fonts.gstatic.com data: asset:",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'",
        "frame-src": "'self' https: http:",
        "media-src": "'self' https: http: blob: data: asset:"
      }
    }
  },
  "bundle": {
    "macOS": {
      "signingIdentity": "Developer ID Application: Julian Bleecker (9DCTLJ9BY7)"
      },
    "resources": [
      "resources/libpdfium.dylib"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
